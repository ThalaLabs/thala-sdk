{
  "name": "thala-sdk",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "typecheck": "turbo typecheck",
    "build": "turbo typecheck build",
    "test": "turbo typecheck test",
    "format": "prettier . --write",
    "all": "turbo build typecheck test",
    "release": "pnpm run all && changeset publish"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm -r run eslint --fix",
      "prettier --write"
    ],
    "*.json": "prettier --write"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3"
  },
  "license": "MIT"
}
